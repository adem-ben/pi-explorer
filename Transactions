```java
import java.util.*;
import org.web3j.protocol.Web3j;
import org.web3j.protocol.http.HttpService;

public class PiNetworkIntegration {

    private Web3j web3j;

    public PiNetworkIntegration(String blockchainUrl) {
        // Connect to the Pi Network blockchain node
        web3j = Web3j.build(new HttpService(blockchainUrl));
    }

    public void connectToExchange(String exchangeApiUrl) {
        // Logic to connect to a cryptocurrency exchange API
        System.out.println("Connecting to exchange at: " + exchangeApiUrl);
        // Add authentication, API key handling, etc.
    }

    public void tradeOnExchange(String currencyPair, double amount) {
        // Logic to execute a trade on the exchange
        System.out.println("Executing trade for " + amount + " of " + currencyPair);
        // Implement trade execution logic using the exchange's API
    }

    public void integratePaymentGateway(String paymentGatewayUrl) {
        // Logic to integrate with a payment gateway
        System.out.println("Integrating payment gateway at: " + paymentGatewayUrl);
        // Add payment processing logic here
    }

    public static void main(String[] args) {
        PiNetworkIntegration integration = new PiNetworkIntegration("https://example-pi-blockchain-node.com");

        // Example usage
        integration.connectToExchange("https://example-exchange-api.com");
        integration.tradeOnExchange("PI/USD", 100.0);
        integration.integratePaymentGateway("https://example-payment-gateway.com");
    }
}
```
